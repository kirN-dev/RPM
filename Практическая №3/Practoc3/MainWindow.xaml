<Window
    x:Class="Practoc3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Practoc3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Практичсекая №3"
    Width="800"
    Height="450"
    Foreground="White"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="Buttons">
            <Setter Property="Control.Foreground" Value="White" />
            <Setter Property="Control.Background" Value="Transparent" />
            <Setter Property="Control.FontWeight" Value="Bold" />
            <Setter Property="Control.FontSize" Value="15" />
            <Setter Property="Control.Height" Value="37" />
            <Setter Property="Control.Width" Value="120" />
        </Style>
    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop x:Name="GradientStop3" Offset="0.5" Color="#0f2845" />
            <GradientStop x:Name="GradientStop4" Offset="1" Color="#456786" />
        </LinearGradientBrush>
    </Window.Background>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ColorAnimation
                        AutoReverse="True"
                        RepeatBehavior="Forever"
                        Storyboard.TargetName="GradientStop3"
                        Storyboard.TargetProperty="Color"
                        From="#0f2845"
                        To="#456786"
                        Duration="0:0:2" />
                    <ColorAnimation
                        AutoReverse="True"
                        RepeatBehavior="Forever"
                        Storyboard.TargetName="GradientStop4"
                        Storyboard.TargetProperty="Color"
                        From="#456786"
                        To="#0f2845"
                        Duration="0:0:2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <Menu
            Height="20"
            VerticalAlignment="Top"
            Background="Transparent"
            FontWeight="Bold"
            Foreground="White">
            <Menu.Resources>
                <Style x:Key="MenuItems">
                    <Setter Property="Control.Foreground" Value="Black" />
                </Style>
            </Menu.Resources>
            <MenuItem Header="Файл">
                <MenuItem
                    x:Name="Save"
                    Click="Save_Click"
                    Header="Сохранить"
                    Style="{StaticResource MenuItems}" />
                <MenuItem
                    x:Name="Open"
                    Click="Open_Click"
                    Header="Открыть"
                    Style="{StaticResource MenuItems}" />
                <Separator />
                <MenuItem
                    x:Name="Exit"
                    Click="Exit_Click"
                    Header="Выход"
                    Style="{StaticResource MenuItems}" />
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem
                    x:Name="About_programm"
                    Click="About_programm_Click"
                    Header="О программе"
                    Style="{StaticResource MenuItems}" />
            </MenuItem>
        </Menu>
        <GroupBox Margin="0,254,10,10" Header="Управление">
            <Grid>
                <TextBox
                    x:Name="RowsCount"
                    Margin="140,2,489,91"
                    Background="Transparent"
                    FontSize="15"
                    Foreground="White"
                    TextChanged="RowsCount_TextChanged" />
                <TextBlock
                    Margin="27,2,632,91"
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Кол-во строк:"
                    TextWrapping="Wrap" />
                <Button
                    x:Name="Fill"
                    Margin="169,74,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="Fill_Click"
                    Content="Заполнить"
                    Style="{StaticResource Buttons}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="7" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    x:Name="Calculate"
                    Margin="317,75,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="Calculate_Click"
                    Content="Вычислить"
                    Style="{StaticResource Buttons}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="7" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    x:Name="Clear"
                    Margin="461,74,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="Clear_Click"
                    Content="Стереть всё"
                    Style="{StaticResource Buttons}">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7" />
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBox
                    x:Name="ColumnCount"
                    Margin="461,0,168,91"
                    Background="Transparent"
                    FontSize="15"
                    Foreground="White"
                    TextChanged="ColumnCount_TextChanged" />
                <TextBlock
                    Margin="317,2,317,91"
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Кол-во столбцов:"
                    TextWrapping="Wrap" />
            </Grid>
        </GroupBox>
        <DataGrid
            x:Name="DataGrid"
            Margin="0,20,154,169"
            Background="Transparent"
            Foreground="Black"
            HeadersVisibility="None" />
        <TextBox
            x:Name="Decision"
            Width="120"
            Height="49"
            Margin="652,131,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            FontSize="15"
            Foreground="White"
            IsReadOnly="True"
            TextWrapping="Wrap" />
        <Label
            Width="62"
            Margin="681,101,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Ответ:"
            FontSize="15"
            FontWeight="Bold"
            Foreground="White" />
    </Grid>
</Window>
